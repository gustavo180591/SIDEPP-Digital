# ==========================================
# Configuración para Producción
# ==========================================
# Copiar este archivo como .env.production y ajustar los valores

# URL de la aplicación (con dominio real)
ORIGIN=https://tudominio.com

# Base de datos PostgreSQL (en el servidor, NO en Docker)
# Formato: postgresql://usuario:password@host:puerto/database
DATABASE_URL=postgresql://usuario:password@localhost:5432/sidepp_db

# Secretos de seguridad
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambiar_en_produccion

# Directorios (dentro del contenedor)
FILE_STORAGE_DIR=/app/uploads
UPLOAD_DIR=/app/uploads
EXTRACTION_DIR=/app/uploads/extractions

# CORS
CORS_ORIGIN=https://tudominio.com

# Puerto (opcional, por defecto 3000)
PORT=3000

# Tamaño máximo de archivo (opcional, por defecto 10MB)
MAX_FILE_SIZE=10485760

