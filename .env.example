# ===== Application Settings =====
NODE_ENV=development
PORT=3000
ORIGIN=http://localhost:3000

# ===== Authentication =====
JWT_SECRET=change_me_to_a_long_random_secret_value
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=change_me_to_another_random_secret
JWT_REFRESH_EXPIRES_IN=30d

# ===== File Storage =====
FILE_STORAGE_DIR=/uploads
UPLOAD_DIR=/data/uploads
EXTRACTION_DIR=/data/extractions

# ===== Database (PostgreSQL) =====
POSTGRES_USER=app
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=sidepp

# Development Database URL (used in docker-compose)
DATABASE_URL_DEV=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public

# Production Database URL (override in production)
DATABASE_URL_PROD=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public

# ===== pgAdmin =====
PGADMIN_DEFAULT_EMAIL=admin@sidepp.com
PGADMIN_DEFAULT_PASSWORD=change_this_password

# ===== OCR Configuration =====
TESSERACT_LANG=spa
TESSERACT_TIMEOUT=30000

# ===== Rate Limiting =====
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # requests per window

# ===== CORS =====
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ===== Logging =====
LOG_LEVEL=info
LOG_FORMAT=json

