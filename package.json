{
	"name": "sidepp-digital",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
	  "dev": "vite dev --host --port 5173",
	  "dev:docker": "docker compose --profile dev up --build",
	  "dev:down": "docker compose --profile dev down",
	  "build": "svelte-kit build",
	  "preview": "svelte-kit preview --port 3000",
	  "start": "node build",
	  "start:docker": "docker compose --profile prod up --build -d",
	  "stop:docker": "docker compose --profile prod down",
	  "db:migrate": "prisma migrate dev",
	  "db:generate": "prisma generate",
	  "db:push": "prisma db push",
	  "db:studio": "prisma studio",
	  "db:seed": "ts-node prisma/seed.ts",
	  "format": "prettier --write .",
	  "format:check": "prettier --check .",
	  "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
	  "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
	  "typecheck": "svelte-check --tsconfig ./tsconfig.json",
	  "typecheck:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
	  "prepare": "svelte-kit sync || echo ''",
	  "test": "vitest run",
	  "test:watch": "vitest",
	  "test:coverage": "vitest run --coverage",
	  "test:e2e": "playwright test",
	  "test:e2e:ui": "playwright test --ui",
	  "audit": "npm audit --production",
	  "audit:fix": "npm audit fix",
	  "outdated": "npm outdated",
	  "clean": "rm -rf node_modules .svelte-kit build coverage .pnpm-store"
	},
	"devDependencies": {
	  "@sveltejs/adapter-node": "^5.2.6",
	  "@sveltejs/kit": "^2.22.0",
	  "@sveltejs/vite-plugin-svelte": "^6.0.0",
	  "svelte": "^5.0.0",
	  "vite": "^7.0.4",
	  "typescript": "^5.0.0",
	  "prisma": "^5.20.0",
	  "@prisma/client": "^5.20.0",
	  "...": "..."
	},
	"packageManager": "pnpm@10.16.1"
  }
  